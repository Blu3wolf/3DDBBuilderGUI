<Window x:Class="_3DDBBuilderGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3DDBBuilderGUI"
        mc:Ignorable="d"
        Title="F4-3DDBBuilder" Height="350" Width="525">
    <Grid>
        <TabControl HorizontalAlignment="Left" VerticalAlignment="Top">
            <TabItem Header="Extract">
                <Grid Background="#FFE5E5E5">
                    <StackPanel>
                        <Label Content="Specify location of Object folder"/>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="SourceSelectButton" Content="Select..." Click="SourceSelectButton_Click"/>
                            <ComboBox x:Name="DBBox" />
                        </StackPanel>
                        <Label Content="Specify destination for extracted DB"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="ExtractionTextBox" TextWrapping="Wrap" Text="{Binding Mode=TwoWay, Path=ExtractionPath}" />
                            <Button x:Name="DestSelectButton" Content="Select..." Click="DestSelectButton_Click"/>
                        </StackPanel>
                        <Button Content="Extract"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="List Parents">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Build" >
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Update" >
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Test DB" >
                <Grid Background="#FFE5E5E5"/>
            </TabItem>

        </TabControl>

    </Grid>
</Window>
