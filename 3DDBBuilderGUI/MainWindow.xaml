<Window x:Class="_3DDBBuilderGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3DDBBuilderGUI"
        mc:Ignorable="d"
        Title="F4-3DDBBuilder" Height="350" Width="525">
    <Grid>
        <TabControl HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top">
            <TabItem Header="Extract">
                <Grid Background="#FFE5E5E5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            
                        </Grid>
                        <Grid Grid.Row="0">
                            <Label Content="Specify location of Object folder" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                            <StackPanel>
                                
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                                <Button x:Name="SourceSelectButton" Content="Select..." Width="80" Height="26" Click="SourceSelectButton_Click"/>
                                <ComboBox x:Name="DBBox" Height="25" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                    
                    
                    <TextBox x:Name="ExtractionTextBox" HorizontalAlignment="Left" Height="23" Margin="10,103,0,0" TextWrapping="Wrap" Text="{Binding Mode=TwoWay, Path=ExtractionPath}" VerticalAlignment="Top" Width="345"/>
                    <Button x:Name="DestSelectButton" Content="Select..." HorizontalAlignment="Left" Margin="360,103,0,0" VerticalAlignment="Top" Width="117" Click="DestSelectButton_Click"/>
                    
                    <Label Content="Specify destination for extracted DB" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
                    <Button Content="Extract" HorizontalAlignment="Left" Margin="213,150,0,0" VerticalAlignment="Top" Width="75"/>
                </Grid>
            </TabItem>
            <TabItem Header="List Parents">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Build" >
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Update" >
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Test DB" >
                <Grid Background="#FFE5E5E5"/>
            </TabItem>

        </TabControl>

    </Grid>
</Window>
